<h1>Modelos de produtos</h1>

<% if @product_models.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome do produto</th>
        <th>SKU</th>
        <th>Fornecedor</th>
      </tr>
    </thead>
    <tbody>
      <% @product_models.each do |pm| %>
        <tr>
          <td><%= pm.name %></td>
          <td><%= pm.sku %></td>
          <td><%= pm.supplier.brand_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>NÃ£o existem modelos de produtos cadastrados</p>
<% end %>

<%= link_to 'Cadastrar novo modelo de produto', new_product_model_path %>
<%= link_to 'Voltar', root_path %>