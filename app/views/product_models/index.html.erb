<h1>Modelos de produtos</h1>

<% if @product_models.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome do produto</th>
        <th>Número de série</th>
        <th>Fornecedor</th>
      </tr>
    </thead>
    <tbody>
      <% @product_models.each do |pm| %>
        <tr><%= pm.name %></tr>
        <tr><%= pm.sku %></tr>
        <tr><%= pm.supplier.brand_name %></tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem modelos de produtos cadastrados</p>
<% end %>

<%= link_to 'Voltar', root_path %>