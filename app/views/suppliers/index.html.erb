<h1>Fornecedores</h1>

<section id="suppliers">
  <% if @suppliers.any? %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Localização</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.brand_name %></td>
            <td><%= supplier.city %> – <%= supplier.state %></td>
            <td><%= supplier.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Não existem fornecedores cadastrados</p>  
  <% end %>

  <%= link_to 'Cadastrar novo fornecedor', new_supplier_path %>
  <%= link_to 'Voltar', root_path %>
</section>